    <div class="row product-row">
      <% @products.each do |product| %>
      <div class="col-md-4 col-xs-6">
        <figure class="card product-card">
          <div class="card-image"> 
            <%= image_tag product.photo.url(:thumb) if product.photo.present? %><br/>
            <%= product.name %><br/>
            <%= product.description %><br/>
            RM<%= product.price %><br/>
            <%= link_to 'Show', product %><br/>
            
            <%= product.user.email %><br/>
            <%= time_ago_in_words(product.created_at) %> ago<br/>
            <%= link_to 'Message me', new_message_path(to: product.user.id) %>
            <% if product.user == current_user %>
            <%= link_to 'Edit', edit_product_path(product) %><br/>
            <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %><br/>
            <% end %>
          </div>  
      </figure>
   </div>
   <% end %>
  </div>
  
<br>
<% if user_signed_in? %>
<%= link_to 'New Product', new_product_path %>
<% else %>
<% end %>